<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rp_money_bg_color">

    <com.easemob.redpacketui.widget.RPTitleBar
        android:id="@+id/title_bar_transfer_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:RPleftImage="@drawable/rp_back_arrow_black"
        app:RPmytitle="@string/transfer_detail_title"
        app:RPsubTitleTextColor="@color/rp_text_transparent_black"
        app:RPtitleBackground="@color/rp_background_white"
        app:RPtitleTextColor="@color/rp_text_all_black" />

    <ImageView
        android:id="@+id/iv_transfer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_transfer_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size120px"
        android:background="@drawable/rp_transfer_success"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_transfer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_transfer_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size30px"
        android:text="@string/transfer_success"
        android:textColor="@color/rp_text_black" />

    <LinearLayout
        android:id="@+id/ll_transfer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_transfer_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_transfer_detail_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/transfer_add"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font90px" />

        <TextView
            android:id="@+id/tv_transfer_detail_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font90px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_transfer_detail_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_transfer_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size24px"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/transfer_change"
            android:textColor="@color/rp_text_light_grey" />

        <TextView
            android:id="@+id/tv_transfer_detail_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size15px"
            android:gravity="center"
            android:text="@string/transfer_see_change"
            android:textColor="@color/rp_light_blue" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_transfer_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size30px"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/transfer_time"
            android:textColor="@color/rp_text_light_grey" />

        <TextView
            android:id="@+id/tv_transfer_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size15px"
            android:gravity="center"
            android:textColor="@color/rp_text_light_grey" />

    </LinearLayout>

</RelativeLayout>
