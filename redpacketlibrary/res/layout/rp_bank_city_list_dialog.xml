<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rp_money_bg_color"
    >

    <com.easemob.redpacketui.widget.RPTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:RPtitleBackground="@color/rp_button_blue"
        />

    <EditText
        android:id="@+id/ed_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/size30px"
        android:background="@drawable/rp_search_bar_input"
        android:drawableLeft="@drawable/rp_search_icon"
        android:drawablePadding="@dimen/size9px"
        android:hint="@string/ed_search_word"
        android:paddingBottom="@dimen/size24px"
        android:paddingLeft="@dimen/size15px"
        android:paddingTop="@dimen/size24px"
        android:maxLines="1"
        android:textColor="@color/rp_text_black"
        android:textColorHint="@color/rp_text_light_grey"
        android:textSize="@dimen/font42px"
        android:visibility="gone"
        />

    <com.easemob.redpacketui.recyclerview.widget.RecyclerView
        android:id="@+id/bank_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_search"
        android:background="@color/rp_background_white"
        android:scrollbars="vertical"
        />


</RelativeLayout>